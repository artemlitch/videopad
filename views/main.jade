extends layout

block content
    body

        // navbar stuff
        div(class='navbar navbar-inverse navbar-fixed-top' role='navigation')

            div(class='container')

                div(class='navbar-header')
                    a(class='navbar-brand' href='#') LoLCoach

                //div(class='divider' id='first-divider')

                div(id='navbar')
                    ul(class='nav navbar-nav')
                        li(id='colour-preview')
                            a(class='colourpicker' href='#' data-toggle='dropdown') 

                        li(class='dropdown thickness')
                            a(href='#' data-toggle='dropdown' data-tooltip='tooltip' data-placement='bottom' title='Thickness')
                                i(class='fa fa-pencil fa-lg')
                            ul(class='dropdown-menu' role='menu')
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='thin') Thin
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='medium') Medium
                                li(role='presentation')
                                    a(role='menuitem' href='#' id='thick') Thick

                        li
                            a(href='#' id='eraser' data-tooltip='tooltip' data-placement='bottom' title='Eraser')
                                span(class='fa fa-eraser fa-lg')

                        li
                            a(href='#' id='clear' data-tooltip='tooltip' data-placement='bottom' title='Clear')
                                span(class='fa fa-trash-o fa-lg')

                    ul(class='nav navbar-nav pull-right')
                        li
                            a(href='#' id='loadVideo' data-tooltip='tooltip' data-placement='bottom' title='Load Video')
                                i(class='fa fa-plus fa-lg')
                        li
                            a(href='#' id='PlayButton' data-tooltip='tooltip' data-placement='bottom' title='Play Video')
                                i(class='fa fa-play fa-lg')
                        li
                            a(href='#' id='MuteButton' data-tooltip='tooltip' data-placement='bottom' title='Mute Video')
                                i(class='fa fa-volume-off fa-lg') 
                        li
                            h3(href='#' id='roomNameLabel' class='label roomName label-success') No Current Room
                        li 
                            p(role='separator' class='divider')
                            p(role='separator' class='divider')
                            p(role='separator' class='divider')
                        li
                            a(href='#' id='createRoomBtn' data-tooltip='tooltip' data-placement='bottom' title='Create Room')
                                i(class='fa fa-plus fa-lg')
                        li
                            a(href='#' id='joinRoomBtn' data-tooltip='tooltip' data-placement='bottom' title='Join Room')
                                i(class='fa fa-sign-in fa-lg') 
                        li
                            a(href='#' data-tooltip='tooltip' data-placement='bottom' title='Leave Room')
                                i(class='fa fa-sign-out fa-lg') 


                            
        // content

        div(class='container')
            div(id='whiteboard-holder' class='whiteboard')
                canvas(id='whiteboard') Your browser does not support the HTML5 tag.
        div(id='video-holder' class='container')
            div(id='video-container' class='video-container') 
                iframe(width='1920' height='930' src='https://www.youtube.com/embed/3BRjf1xKUoo?rel=0&amp;controls=0&amp;showinfo=0;enablejsapi=1&html5=1;' frameborder='0' id='video')
                        
                    
